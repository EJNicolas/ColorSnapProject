<?xml version="1.0" encoding="utf-8"?>
<!-- Implementing dark theme referenced from https://blog.prototypr.io/implementing-dark-theme-in-android-dfe63e62145d -->
<resources>
    <style name="LightTheme" >
        <item name="textColor">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>
    </style>

    <style name="DarkTheme">
        <item name="textColor">#ffffff</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="bgColor">#2C2C2C</item>
        <item name="android:fontFamily">@font/poppins</item>

    </style>
</resources>