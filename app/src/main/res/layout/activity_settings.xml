<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/baseLayout"
    android:background="?attr/bgColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:textSize="30sp"

        android:fontFamily="@font/poppins"
        android:textFontWeight="750"
        android:layout_marginBottom="20dp"
        android:textColor="?attr/textColor"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="Dark Mode"
                    android:fontFamily="@font/poppins"
                    android:textSize="17sp"
                    android:layout_marginBottom="40dp"
                    android:layout_marginLeft="10dp"
                    android:textFontWeight="650"

                    android:textAllCaps="false"
                    android:textColor="?attr/textColor"/>

                <ToggleButton
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/poppins"

                    android:id="@+id/toggleDarkMode"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Default Color Code Display"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins"
                    android:textFontWeight="650"
                    android:textAllCaps="false"
                    android:layout_marginLeft="10dp"

                    android:textColor="?attr/textColor"/>

                <RadioGroup
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioRGBHexGroup">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Hexadecimal (#1122AA)"
                        android:textSize="12sp"

                        android:layout_marginBottom="30dp"
                        android:id="@+id/radioHex"
                        android:fontFamily="@font/poppins"
                        android:checked="true"
                        android:textColor="?attr/metaTextColor"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="RGB(0-255,0-255,0-255)"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins"
                        android:layout_marginBottom="30dp"
                        android:id="@+id/radioRGB"
                        android:textColor="?attr/metaTextColor"/>
                </RadioGroup>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonSaveSettings"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Save Settings"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="600"
        android:backgroundTint="#567DF4" />


</LinearLayout>