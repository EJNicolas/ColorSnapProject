<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bgColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Color Activity"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textColor="?attr/textColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:id="@+id/textViewEditColor"
                android:textColor="?attr/textColor" />

            <LinearLayout
                android:id="@+id/colorChange"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="horizontal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Hold Button and rotate phone left and right to change saturation, up and down to change the brightness"
                android:textColor="?attr/textColor"
                android:textSize="16sp" />


                <Button
                    android:id="@+id/buttonSaveColor"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins"
                    android:text="Save color"
                    android:textAllCaps="false"
                    android:textFontWeight="600"
                    android:textColor="@color/white"
                    android:backgroundTint="#567DF4" />

                <Button
                    android:id="@+id/buttonChangeColor"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="@font/poppins"
                    android:text="Button"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:backgroundTint="#567DF4" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#9289FC">

        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#9289FC"
            android:fontFamily="@font/poppins"
            android:onClick="moveToCamera"
            android:text="Camera"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/buttonColorSchemes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#9289FC"
            android:fontFamily="@font/poppins"
            android:onClick="moveToColorSchemes"
            android:text="Saved Colors"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#9289FC"
            android:fontFamily="@font/poppins"
            android:onClick="moveToSettings"
            android:text="Settings"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>
</RelativeLayout>