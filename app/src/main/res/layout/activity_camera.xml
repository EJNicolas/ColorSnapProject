<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bgColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera Activity"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textFontWeight="600"
        android:fontFamily="@font/poppins"
        android:layout_marginBottom="10dp"
        android:textColor="?attr/textColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Tap a location on the image to select a color"
            android:textColor="?attr/textColor"
            android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chosen Color"
                android:layout_gravity="center"
                android:textFontWeight="600"
                android:fontFamily="@font/poppins"
                android:textSize="20sp"
                android:textColor="?attr/textColor"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="290dp"
                android:layout_gravity="center"

                android:layout_height="150dp"
                android:orientation="vertical"
                android:id="@+id/linearLayoutColorPick"/>


        <Button
            android:id="@+id/buttonEditColor"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins"
            android:text="Edit Color"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textColor="@color/white"
            android:backgroundTint="#567DF4" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#9289FC">

        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#9289FC"
            android:fontFamily="@font/poppins"
            android:onClick="moveToCamera"
            android:text="Camera"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/buttonColorSchemes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#9289FC"
            android:fontFamily="@font/poppins"
            android:onClick="moveToColorSchemes"
            android:text="Saved Colors"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#9289FC"
            android:fontFamily="@font/poppins"
            android:onClick="moveToSettings"
            android:text="Settings"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>

</RelativeLayout>

