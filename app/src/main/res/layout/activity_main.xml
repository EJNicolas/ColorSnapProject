<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="?attr/bgColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/poppins"
                android:text="Welcome to"
                android:textColor="?attr/textColor"
                android:textFontWeight="500"
                android:textSize="20sp"

                />

            <ImageView
                android:layout_width="280dp"
                android:layout_height="80dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/colorsnaplogo"
                />
            <TextView
                android:layout_width="237dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="Want to easily identify a colour?
        Take a picture and we will find out for you."
                android:textColor="?attr/textColor"
                android:textFontWeight="500"
                android:textSize="12sp"


                />

            <Button
                android:id="@+id/buttonCamera"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins"
                android:text="Camera"
                android:textAllCaps="false"
                android:textFontWeight="600"
                android:textSize="13sp"
                app:backgroundTint="#FF9800" />

            <Button
                android:id="@+id/buttonColorSchemes"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins"
                android:text="Saved Colors"
                android:textAllCaps="false"
                android:textFontWeight="600"
                android:textSize="13sp"
                app:backgroundTint="#FF317B" />

            <Button
                android:id="@+id/buttonSettings"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:text="Settings"
                android:textAllCaps="false"
                android:textFontWeight="600"
                android:textSize="13sp"
                app:backgroundTint="#23B0B0" />
        </LinearLayout>
    </ScrollView>>
</LinearLayout>