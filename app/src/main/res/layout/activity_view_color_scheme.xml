<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Color Scheme"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:id="@+id/textViewColorSchemeTitle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit color"
        android:layout_gravity="center"
        android:id="@+id/buttonEditColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a color"
        android:layout_gravity="center"
        android:id="@+id/buttonAddColor" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/editTextColorInput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save this color (temporary)"
        android:layout_gravity="center"
        android:id="@+id/buttonSaveColor" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search color"
        android:layout_gravity="center"
        android:id="@+id/buttonSearchColor" />

</LinearLayout>