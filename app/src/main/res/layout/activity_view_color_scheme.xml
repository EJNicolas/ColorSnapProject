<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/bgColor">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewColorSchemeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="A Color Scheme"
                android:textColor="?attr/textColor"
                android:textSize="30sp"
                android:fontFamily="@font/poppins"
                android:textFontWeight="650"
                android:textAllCaps="false"
                android:layout_marginTop="60dp"
                />


            <Button
                android:id="@+id/buttonAddColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins"
                android:text="Add a color"
                android:textFontWeight="600"
                android:backgroundTint="#567DF4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewSelectedColor"
                    android:textSize="20sp"
                    android:text="test"
                    android:textColor="?attr/textColor"/>

                <Button
                    android:id="@+id/buttonEditColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:text="Edit"
                    android:textFontWeight="600"
                    android:backgroundTint="#FF9800" />

                <Button
                    android:id="@+id/buttonSearchColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins"
                    android:text="Learn"
                    android:textFontWeight="600"
                    android:backgroundTint="#23B0B0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:fontFamily="@font/poppins"
                android:paddingBottom="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor1"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="?attr/textColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutColor1"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/textViewColor2"
                    android:textSize="20sp"
                    android:textColor="?attr/textColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutColor2"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor3"
                    android:fontFamily="@font/poppins"
                    android:textSize="20sp"
                    android:textColor="?attr/textColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutColor3"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor4"
                    android:fontFamily="@font/poppins"
                    android:textSize="20sp"
                    android:textColor="?attr/textColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:id="@+id/linearLayoutColor4"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewColor5"
                    android:fontFamily="@font/poppins"
                    android:textSize="20sp"
                    android:textColor="?attr/textColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutColor5"
                    android:orientation="vertical" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#9289FC">

        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#9289FC"
            android:fontFamily="@font/poppins"
            android:onClick="moveToCamera"
            android:text="Camera"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/buttonColorSchemes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#9289FC"
            android:fontFamily="@font/poppins"
            android:onClick="moveToColorSchemes"
            android:text="Saved Colors"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#9289FC"
            android:fontFamily="@font/poppins"
            android:onClick="moveToSettings"
            android:text="Settings"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textFontWeight="600"
            android:textSize="13sp"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

</RelativeLayout>